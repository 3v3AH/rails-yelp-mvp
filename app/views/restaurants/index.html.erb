<h1 class="mb-4">All Restaurants</h1>

<%= link_to 'Add New Restaurant', new_restaurant_path, class: 'btn btn-primary mb-3' %>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text"><%= restaurant.category %> - <%= restaurant.address %></p>
          <%= link_to 'View', restaurant_path(restaurant), class: 'btn btn-outline-secondary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
